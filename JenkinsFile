pipeline {
    agent { label 'windows' }

    tools {
        // Укажите метку вашей установки Gradle
        gradle '7.2'
    }

    stages {
        stage('Checkout') {
            steps {
                // Клонируем репозиторий
                git url: 'https://github.com/SergeyOcheretko/GradleProject', branch: 'main'
            }
        }

        stage('Build') {
            steps {
                // Выполняем сборку проекта
                bat 'gradle clean build'
            }
        }

        stage('Test') {
            steps {
                // Запускаем тесты
                bat 'gradle test'
            }
        }

        stage('Archive Results') {
            steps {
                // Архивируем результаты сборки и тестов
                archiveArtifacts artifacts: 'build/libs/**/*.jar', allowEmptyArchive: true
                junit 'build/test-results/**/*.xml'
            }
        }
    }

    post {
        always {
            // Выполняем действия после завершения пайплайна
            cleanWs()
        }
    }
}
