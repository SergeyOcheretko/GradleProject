pipeline {
    agent { label 'windows' }

    tools {
        gradle 'Gradle_7.2'  // Имя инструмента Gradle, как настроено в Jenkins
    }

    stages {
        stage('Build') {
            steps {
                echo 'Starting the Build stage...'
                // Вывод переменной окружения PATH для отладки
                bat 'echo %PATH%'
                // Проверка наличия файлов Gradle
                bat 'dir C:\\ProgramData\\Jenkins\\.jenkins\\tools\\hudson.plugins.gradle.GradleInstallation\\Gradle_7.2\\bin'
                // Проверка версии Gradle с полным путем
                bat 'C:\\ProgramData\\Jenkins\\.jenkins\\tools\\hudson.plugins.gradle.GradleInstallation\\Gradle_7.2\\bin\\gradle --version'
                // Выполнение команды сборки с полным путем
                bat 'C:\\ProgramData\\Jenkins\\.jenkins\\tools\\hudson.plugins.gradle.GradleInstallation\\Gradle_7.2\\bin\\gradle clean build'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
