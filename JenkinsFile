pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Starting the Build stage...'
                // Выводим переменные среды
                bat 'echo %PATH%'
                // Проверяем доступность Gradle
                bat 'gradle -v'
                // Переходим в директорию проекта и выполняем сборку
                dir('C:\\Users\\Sergey\\IdeaProjects\\GradleProject') {
                    bat 'gradle build'
                }
            }
        }
    }
    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}











