pipeline {
    agent { label 'windows' }

    stages {
        stage('Build') {
            steps {
                echo 'Starting the Build stage...'
                withEnv(['GRADLE_OPTS=-Dfile.encoding=UTF-8']) {
                    bat 'gradle build'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}




