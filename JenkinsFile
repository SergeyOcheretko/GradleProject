pipeline {
    agent { label 'windows' }

    stages {
        stage('Build') {
            steps {
                echo 'Starting the Build stage...'
                bat 'chcp 65001 && gradle build'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}





