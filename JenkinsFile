pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Starting the Build stage...'
                bat 'gradle build'
            }
        }
    }
    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}







