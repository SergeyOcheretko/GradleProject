pipeline {
    agent { label 'windows' }

    tools {
        // Убедитесь, что Gradle установлен и указан правильно
        gradle 'Gradle_7.2'  // Имя инструмента Gradle, как настроено в Jenkins
    }

    stages {
        stage('Build') {
            steps {
                echo 'Starting the Build stage...'
                bat 'gradle --version'  // Проверка версии Gradle
                bat 'gradle clean build'  // Выполнение команды сборки Gradle
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
