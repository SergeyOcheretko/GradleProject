pipeline {
    agent { label 'windows' }

    options {
        encoding 'UTF-8'  // Указываем UTF-8 как кодировку для скрипта
    }

    stages {
        stage('Build') {
            steps {
                echo 'Starting the Build stage...'
                bat 'gradle build'  // Здесь используется ваша команда gradle
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}



