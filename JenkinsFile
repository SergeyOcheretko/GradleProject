pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Starting the Build stage...'
                bat 'echo %PATH%'
                bat 'gradle -v'
                bat 'gradle -b C:\\Users\\Sergey\\IdeaProjects\\GradleProject\\build.gradle build'
            }
        }
    }
    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}









